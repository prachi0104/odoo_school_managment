<odoo>

    <record id="hostel_admission_list" model="ir.ui.view">
        <field name="name">hostel.admission.list.view</field>
        <field name="model">hostel.admission</field>
        <field name="arch" type="xml">
            <list  decoration-danger="state=='deallocated'">
                        <field name="name"/>
                        <field name="admission_date"/>
                        <field name="room_type"/>
                        <field name="per_sem_charge"/>
                        <field name="state" decoration-success="state=='allocated'" decoration-danger="state=='deallocated'" widget="badge"/>

            </list>
        </field>
    </record>

    <record id="hostel_admission_form" model="ir.ui.view">
        <field name="name">hostel.admission.form.view</field>
        <field name="model">hostel.admission</field>
        <field name="arch" type="xml">
            <form>
            <header>
                <button name="action_print_pdf" type="object" class="oe_highlight" string="Preview"/>

             <button name="action_allocate_room" string="Allocate" type="object"  class="btn-primary" invisible="state == 'allocated'"/><!--     -->
             <button name="action_deallocate_room" string="Deallocate" type="object"  class="btn-primary"  invisible="state == 'deallocated'" /> <!-- invisible = "[('state','=','deallocated')]"  -->
                                             <!--options="{'clickable': '1'}"-->
               <field name="state" widget="statusbar" nolabel="1"  statusbar_visible="allocated,deallocated"/>
            </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="admission_date"/>
                        <field name="room_type"/>
                        <field name="per_sem_charge"/>
                    </group>
                </sheet>
                <footer>

                </footer>
            </form>
        </field>
    </record>


    <record id="action_hostel_admission_test" model="ir.actions.act_window">
        <field name="name">Hostel Admission</field>
        <field name="res_model">hostel.admission</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
