            <div class="container py-5">
                <h2 class="text-center mb-5" style="color:#007BFF;">Our Extracurricular Courses</h2>
                <div class="row justify-content-center">
                    <t t-foreach="courses" t-as="course">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow rounded-3 border-0 h-100"
                                 style="background: linear-gradient(145deg, #e0f7ff, #ffffff);">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title text-primary fw-bold" t-esc="course.name"/>
                                        <p class="card-text mt-2" t-esc="course.description"/>
                                        <span class="badge bg-primary text-white mt-3">
