                                ← Back to Student List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>


    <template id="hostel_tem" name="Student Hostel Info">
        <t t-call="website.layout">
            <t t-set="head">
                <style>
                    footer.o_footer {
                    display: none !important;
                    }
                </style>
            </t>

            <div class="container mt-5">
                <h2 class="text-center mb-4">Hostel Information</h2>

                <!-- Displaying Hostel Rooms -->
                <div class="row justify-content-center mb-5">
                    <t t-foreach="hostel" t-as="t">
                        <div class="col-md-4 col-sm-6 mb-4">
                            <div class="card shadow-sm h-100">
                                <div class="card-body text-center">
                                    <h4 class="card-title text-primary mb-3">
                                        <t t-raw="t.room_type"/>
                                    </h4>
                                    <p class="card-text">
                                        <strong>Total Rooms:</strong>
                                        <t t-esc="t.total_room"/>
                                        <br/>
                                        <strong>Occupied:</strong>
                                        <t t-esc="t.occupied"/>
                                        <br/>
                                        <strong>Available:</strong>
                                        <t t-esc="t.available"/>
                                        <br/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Hostel Admission Form -->
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white text-center">
                                <h4>Hostel Admission Form</h4>
                            </div>
                            <div class="card-body">
                                <form action="/hostel-submit" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="mb-3">
                                        <label class="form-label">Name</label>

                                        <select name="student_name" class="form-control">
                                            <option value="">Student Name</option>
                                            <t t-foreach="student_data" t-as="student">
                                                <option t-att-value="student.id">
                                                    <t t-esc="student.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Admission Date</label>
                                        <input type="date" name="admission_date" class="form-control"
                                               t-att-value="today"/>
                                    </div>


                                    <div class="mb-3">
                                        <label class="form-label">Room Type</label>

                                        <select name="room_type" class="form-control">
                                            <option value="">Select Room Type</option>
                                            <t t-foreach="rooms" t-as="room">
                                                <option t-att-value="room.id">
                                                    <t t-esc="room.room_type"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Per Sem Charge</label>
                                        <input type="text" name="per_sem_charge" class="form-control"/>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Charges to Pay</label>
                                        <input type="text" name="charges_to_pay" class="form-control"/>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control"/>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </t>
    </template>

    <!--    Teachers -->

