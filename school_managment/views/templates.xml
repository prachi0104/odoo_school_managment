<template id="home_page_template_new" name="Homepage">
    <t t-call="website.layout">
        <t t-set="head">
            <style>
                body {
                    margin: 0;
                    padding: 0;
                }

                .homepage-container {
                    padding: 100px 20px;
                    backdrop-filter: blur(4px);
                    background-color: rgba(255, 255, 255, 0.6);
                    border-radius: 20px;
                }

                .homepage-title {
                    text-align: center;
                    margin-bottom: 40px;
                    font-size: 2.5rem;
                    font-weight: bold;
                    color: #333;
                }

                .custom-card {
                    background: white;
                    border-radius: 16px;
                    padding: 30px;
                    height: 100%;
                        transition: transform 0.2s ease-in-out;
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
                }

                .custom-card:hover {
                    transform: translateY(-5px);
                }

                .custom-card img {
                    width: 60px;
                    margin-bottom: 15px;
                }

                .card-title {
                    font-size: 1.2rem;
                    font-weight: 600;
                    margin-bottom: 10px;
                    color: #444;
                }

                @media (max-width: 767px) {
                    .custom-card {
                        margin-bottom: 20px;
                    }
                }
            </style>
        </t>

        <div id="wrap">
            <div class="oe_structure">
                <div class="container text-center py-5">

                    <!-- Logo -->
                    <img src="/web/image/res.company/1/logo" alt="School Logo" class="mb-4" style="max-height: 120px;" />
<!--                    <img src="/school_managment/static/src/img/icon2.png" alt="School Logo" class="mb-4" style="max-height: 120px;" />-->

                    <!-- Title -->
                    <div class="homepage-container mt-4">
                        <div class="text-center mb-5">
                            <h1 class="display-4">Welcome to School Management Portal</h1>
                            <p class="lead">Your central hub for academic and hostel management</p>
                        </div>

                        <!-- Row 1 -->
                        <div class="row mb-4">
                            <div class="col-md-4 mb-4">
                                <a href="/student" class="text-decoration-none text-dark">
                                    <div class="custom-card border-primary">
                                        <img src="/school_managment/static/src/img/teacher6.png" />
                                        <h4>Student Corner</h4>
                                        <p class="text-muted">Register and view your academic journey</p>
                                    </div>
                                </a>
                            </div>


                            <div class="col-md-4 mb-4">
                                <a href="/student_profile" class="text-decoration-none text-dark">
                                    <div class="custom-card border-success">
                                        <img src="/school_managment/static/src/img/profile.png" />
                                        <h4>Student Profiles</h4>
                                        <p class="text-muted">Explore student information</p>
                                    </div>
                                </a>
                            </div>



                            <div groups="school_managment.group_school_student" class="col-md-4 mb-4">
                                <a href="/teacher" class="text-decoration-none text-dark">
                                    <div class="custom-card border-info">
                                        <img src="/school_managment/static/src/img/teacher.png" />
                                        <h4>Teacher Corner</h4>
                                        <p class="text-muted">Access resources and class info</p>
                                    </div>
                                </a>
                            </div>

                        </div>

                        <!-- Row 2 -->
                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <a href="/hostel" class="text-decoration-none text-dark">
                                    <div class="custom-card border-warning">
                                        <img src="/school_managment/static/src/img/hostel.png" />
                                        <h4>Hostel Information</h4>
                                        <p class="text-muted">View available rooms and apply</p>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4 mb-4">
                                <a href="/cantin" class="text-decoration-none text-dark">
                                    <div class="custom-card border-dark">
                                        <img src="/school_managment/static/src/img/food.png" />
                                        <h4>Canteen Facility</h4>
                                        <p class="text-muted">Enjoy food that’s made with heart</p>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4 mb-4">
                                <a href="/courses" class="text-decoration-none text-dark">
                                    <div class="custom-card border-primary">
                                        <img src="/school_managment/static/src/img/courses.png" />
                                        <h4>Courses</h4>
                                        <p class="text-muted">Join exciting extracurricular classes</p>
                                    </div>
                                </a>
                            </div>
                        </div>

                        <!-- Footer Note -->
                        <p class="mt-5 text-muted small">Made with ❤️ in Odoo</p>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>



    <template id="student_corner" name="Student Corner">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">

                        <h1>Student Registration</h1>
                        <form action="/submit" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" name="name" required="required" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="date" name="date_of_birth" required="required" class="form-control"/>
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="Teacher_corner" name="Teacher Corner">
        <t t-call="website.layout">
            <div class="container">
                <h1>Teacher Corner in making</h1>
            </div>
        </t>
    </template>

    <template id="student_success" name="Student Form Success">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2>Thank you,<t t-esc="name"/>!
                </h2>
                <p>Your Enrollemtn number is<t t-esc="enr"/>Enjoy learning
                </p>
            </div>
        </t>
    </template>


    <template id="student_profile_tem" name="Student profile">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h2 class="text-center mb-4">Our Students</h2>
                <div class="row">
                    <t t-foreach="students" t-as="student">
                        <div class="col-md-4 col-sm-6 mb-4">
                            <a t-att-href="'/student/profile/%s' % student.id"
                               style="text-decoration: none; color: inherit;">
                                <div class="card shadow-sm h-100 text-center p-3" style="background-color:#c0e0ff">
                                    <img t-att-src="'/school_managment/static/src/img/student.png'"
                                         class="rounded-circle mb-3"
                                         style="height:60px; width:60px; object-fit:cover;margin-left: 150px;"/>

                                    <h5 class="card-title">
                                        <t t-esc="student.name"/>
                                    </h5>
                                    <p class="card-text">
                                        <strong>Enrollment No:</strong>
                                        <t t-esc="student.enrollment"/>
                                        <br/>
                                        <strong>Department:</strong>
                                        <t t-esc="student.department_id.name"/>
                                        <br/>
                                    </p>
                                </div>
                            </a>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>


    <template id="student_detail_tem" name="Student Detail">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card shadow-lg p-4 rounded-lg text-center" style="border: 1px solid #ddd;">
                            <!-- Profile Image -->
                            <img t-att-src="'/school_managment/static/src/img/student.png'"
                                 class="rounded-circle mb-4"
