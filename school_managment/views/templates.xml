                            <!-- Name -->
                            <h2 class="card-title mb-3" style="color: #2c3e50;">
                                <t t-esc="student.name"/>
                            </h2>

                            <!-- Info -->
                            <div class="text-start mt-3 px-3">
                                <p>
                                    <strong>🎓 Enrollment No:</strong>
                                    <t t-esc="student.enrollment"/>
                                </p>
                                <p>
                                    <strong>📅 Date of Birth:</strong>
                                    <t t-esc="student.date_of_birth"/>
                                </p>
                                <p>
                                    <strong>🏛 Department:</strong>
                                    <t t-esc="student.department_id.name"/>
                                </p>
                                <p>
                                    <strong>📊 Total Marks:</strong>
                                    <t t-esc="student.total_marks"/>
                                </p>
                            </div>

                            <!-- Optional: Back to list -->
