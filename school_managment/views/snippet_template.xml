<odoo>
  <template id="custom_school_block" name="School Info Block">
    <section class="oe_structure" data-name="School Info Block">
      <div class="container py-5 bg-light">
        <div class="row text-center">
          <div class="col">
            <h2>Welcome to Our School</h2>
            <p>Providing quality education since 1990.</p>
            <a href="/student-corner" class="btn btn-success mt-3">Visit Student Corner</a>
          </div>
        </div>
      </div>
    </section>
  </template>


<!--  teacher profile block-->

