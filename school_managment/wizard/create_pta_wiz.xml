<?xml version="1.0"?>
<odoo>
        <record id="view_create_pta_form" model="ir.ui.view">
            <field name="name">create.pta.wizard.form</field>
            <field name="model">create.pta.wizard</field>
            <field name="arch" type="xml">
                <form string="create new pta">
                    <group>
                        <field name="name"/>
                        <field name="enrollment_number"/>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-primary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_pta" model="ir.actions.act_window">
            <field name="name">Create Pta</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.pta.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_create_pta_form"/>
            <field name="target">new</field>
           
        </record>
</odoo>
