<odoo>

    <record model="ir.module.category" id="module_category_school">
        <field name="name">school</field>
        <field name="sequence">1</field>
    </record>
    <record model="res.groups" id="group_school_student">
        <field name="name">school student</field>
        <field name="category_id" ref="school_managment.module_category_school"/>
        <field name="comment">The user will be able to his studentcorner data only.</field>
    </record>

    <record model="res.groups" id="group_school_teacher">
        <field name="name">school teacher</field>
        <field name="category_id" ref="school_managment.module_category_school"/>
        <field name="implied_ids" eval="[(4, ref('school_managment.group_school_student'))]"/>
        <field name="comment">The user will be able to his teacher corner data only.</field>
    </record>


</odoo>